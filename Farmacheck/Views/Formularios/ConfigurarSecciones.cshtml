@model List<Farmacheck.Models.SeccionViewModel>
@{
    ViewData["Title"] = "Administrar Secciones";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <a class="btn btn-success" style="background-color: #0c4c98 !Important; color: white;"
           href="@Url.Action("Index", "Formularios")">
            <i class="bi bi-arrow-left"></i> Regresar
        </a>
        <h4 class="text-dark">@ViewBag.NombreFormulario - Secciones</h4>
        <button id="btnNuevaSeccion" class="btn mb-3" style="background-color: #00ab8e; color:white;">
            <i class="bi bi-plus-circle"></i> Nueva sección
        </button>
    </div>

    <table class="table table-bordered custom-table" id="tablaSecciones">
        <thead>
            <tr>
                <th style="width: 10%;">Id</th>
                <th style="width: 20%;">Nombre</th>
                <th style="width: 30%;">Categoría</th>
                <th style="width: 40%;" class="text-center"></th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

<!-- Modal Nueva/Editar Sección -->
<div class="modal fade" id="modalSeccion" tabindex="-1" aria-labelledby="modalSeccionTitulo" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary_form text-white">
                <h5 class="modal-title" id="modalSeccionTitulo">Nueva sección</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="seccionId" />
                <div class="mb-2">
                    <label>Nombre</label>
                    <input type="text" class="form-control" id="titulo" placeholder="Ej. Cierre, Inventario, Seguridad" />
                </div>
                <div class="mb-2">
                    <label>Categoría</label>
                    <select class="form-select" id="categoria"></select>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button id="btnGuardarSeccion" class="btn btn-primary">Guardar</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        const baseUrl = '@Url.Action("Index", "Pregunta")';
        const formularioId = @ViewBag.FormularioId;

        $(document).ready(function () {
            cargarCategorias();
            const storedLength = localStorage.getItem('sectionsPageLength');
            const initialPageLength = storedLength ? parseInt(storedLength) : 10;
            const tabla = $('#tablaSecciones').DataTable({
                paging: true,
                searching: true,
                ordering: true,
                info: true,
                lengthMenu: [5, 10, 25, 50],
                pageLength: initialPageLength,
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json'
                }
            });

            tabla.on('length.dt', function (e, settings, len) {
                localStorage.setItem('sectionsPageLength', len);
            });

            cargarSecciones(); 
            
            $('#tablaSecciones').DataTable();

            $('#btnNuevaSeccion').click(function () {
                limpiarModal();
                $('#modalSeccionTitulo').text("Nueva sección");
                $('#modalSeccion').modal('show');
            });

            $('#btnGuardarSeccion').click(function () {
                const datos = {
                    Id: $('#seccionId').val() || 0,
                    FormularioId: @ViewBag.FormularioId ?? 1,
                    Nombre: $('#titulo').val(),
                    CategoriaId: $('#categoria').val()
                };

                $.ajax({
                    url: '@Url.Action("GuardarSeccion", "Formularios")',
                    method: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(datos),
                    success: function (r) {
                        if (r.success) {
                            $('#modalSeccion').modal('hide');

                            const mensaje = 'Sección guardada correctamente';

                            showAlert(mensaje, 'success');
                            cargarSecciones();
                        } else {
                            showAlert(r.error || "Error al guardar", 'error');
                        }
                    }
                });
            });
        });

        function cargarCategorias() {
            $.get('@Url.Action("ListarCategoriasDeSecciones", "Formularios")', function (r) {
                if (r.success) {
                    const select = $('#categoria');
                    select.empty();
                    r.data.forEach(u => select.append(`<option value="${u.id}">${u.nombre}</option>`));
                }
            });
        }

        function cargarSecciones() {
            $.get('@Url.Action("ListarSecciones", "Formularios")', { formularioId: @ViewBag.FormularioId ?? 1 }, function (r) {
                if (r.success) {
                    const tabla = $('#tablaSecciones');

                    let pageLength = parseInt(localStorage.getItem('sectionsPageLength')) || 5;
                    if ($.fn.DataTable.isDataTable(tabla)) {
                        pageLength = tabla.DataTable().page.len();
                        tabla.DataTable().destroy();
                    }

                    const tbody = tabla.find('tbody');
                    tbody.empty();
                    r.secciones.forEach(s => {
                        tbody.append(`
                                   <tr>
                                    <td style="width: 10%;">${s.id}</td>
                                    <td style="width: 20%;">${s.nombre}</td>
                                    <td style="width: 30%;">${s.categoriaNombre}</td>
                                    <td style="width: 40%; text-align:center;">
                                        <div class="btn-group" role="group">
                                         
                                            <button class="btn btn-sm" style="background-color: #0c4c98; color: white;" title="Configurar preguntas" onclick="window.location.href='${baseUrl}?seccionId=${s.id}'">
                                                <i class="bi bi-gear"></i> Config. Preguntas
                                            </button>


                                            <button class="btn btn-sm" style="background-color: #00ab8e; color: white;" onclick="editarSeccion(${s.id})" title="Editar sección">
                                                <i class="bi bi-pencil"></i> Editar Sección
                                            </button>
                                            <button class="btn btn-sm" style="background-color: #79b828; color: white;" onclick="eliminarSeccion(${s.id})" title="Eliminar sección">
                                                <i class="bi bi-trash"></i> Eliminar Sección
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                        `);
                    });

                    const nuevaTabla = tabla.DataTable({
                        paging: true,
                        searching: true,
                        ordering: true,
                        info: true,
                        lengthMenu: [5, 10, 25, 50],
                        pageLength: pageLength,
                        order: [[0, 'asc']],
                        language: {
                            url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json'
                        }
                    });

                    nuevaTabla.on('length.dt', function (e, settings, len) {
                        localStorage.setItem('marcasPageLength', len);
                    });
                }
            });
        }

        function editarSeccion(id) {
            $.get('@Url.Action("ObtenerSeccion", "Formularios")', { id }, function (r) {
                if (r.success) {
                    const s = r.data;
                    $('#modalSeccionTitulo').text("Editar sección");
                    $('#seccionId').val(s.id);
                    $('#titulo').val(s.nombre);
                    $('#categoria').val(s.categoriaId);
                    $('#modalSeccion').modal('show');
                } else {
                    showAlert(r.error || "No se pudo cargar la sección", 'error');
                }
            });
        }

        function eliminarSeccion(seccionId) {
             confirmAction("¿Estás seguro de que deseas eliminar esta sección?").then(function (ok) {
                if (!ok) return;
                $.post('@Url.Action("EliminarSeccion", "Formularios")', { formularioId, seccionId }, function (r) {
                    if (r.success) {
                        showAlert('Sección eliminada correctamente', 'success');
                        cargarSecciones();
                    } else {
                        showAlert(r.error || "Error al eliminar", 'error');
                    }
                });
            });
        }

        function limpiarModal() {
            $('#seccionId').val('');
            $('#titulo').val('');
            $('#categoria').val('');
        }
    </script>
}
